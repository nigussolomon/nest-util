{
  "name": "@nest-util/demo-api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "typeorm": "ts-node -P tsconfig.app.json -r tsconfig-paths/register ../../node_modules/typeorm/cli.js",
    "migration:generate": "pnpm typeorm migration:generate ./src/db/migrations/$NAME -d src/db/ormconfig.ts",
    "migration:run": "pnpm typeorm migration:run -d src/db/ormconfig.ts",
    "migration:revert": "pnpm typeorm migration:revert -d src/db/ormconfig.ts"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "apps/demo-api"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/demo-api/dist/package.json",
          "{workspaceRoot}/apps/demo-api/dist/pnpm-lock.yaml"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/demo-api/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@nest-util/demo-api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@nest-util/demo-api:build:development"
          },
          "production": {
            "buildTarget": "@nest-util/demo-api:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "typecheck": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsc --build apps/demo-api/tsconfig.app.json"
        }
      }
    }
  },
  "dependencies": {
    "@nest-util/nest-auth": "workspace:*",
    "@nest-util/nest-crud": "workspace:*",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "dotenv": "^17.2.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0"
  }
}
